
<view class="state">
    <view class="state-text"><image mode="aspectFit" src="{{stateIcon[product.stateId]}}"></image>{{product.state}}</view>
    <view class="state-return">应退款金额: {{product.productPrice}}元 <text wx:if="{{product.stateId === 3}}">，实际退款金额: {{product.returnPrice}}元</text></view>
</view>

<view class="product-info">
    <view class="product-pic">
        <image src="{{product.picUrl}}" mode="aspectFit"></image>
    </view>
    <view class="product-meta">
        <view class="name">{{product.name}}</view>
        <view class="meta">购买数量：{{product.buyCount}}</view>
        <view class="meta">购买规格：{{product.specs}}</view>
    </view>
    <view class="product-price">
        <view>￥{{product.price}}</view>
    </view>
</view>


<view class="detail-list">
    <view class="detail-title">工单详情:</view>
    <view class="detail-list-item">
        <view class="label">客户昵称:</view>
        <view class="content">{{product.nickName}}</view>
    </view>
    <view class="detail-list-item">
        <view class="label">工单编号:</view>
        <view class="content">{{product.orderId}}</view>
    </view>
    <view class="detail-list-item">
        <view class="label">关联订单:</view>
        <view class="content">{{product.orderId}}</view>
    </view>

    <view class="detail-list-item">
        <view class="label">工单类型:</view>
        <view class="content">{{ticketType[product.ticketType]}}</view>
    </view>

    <view class="detail-list-item">
        <view class="label">处理方式:</view>
        <view class="content">{{refundType[product.refundType]}}</view>
    </view>

    <view class="detail-list-item">
        <view class="label">申请时间:</view>
        <view class="content">{{product.applyDateTime}}</view>
    </view>
    <view wx:if="{{product.stateId === 2}}" class="detail-list-item">
        <view class="label">完成时间:</view>
        <view class="content">{{product.solveDateTime}}</view>
    </view>
    <view class="detail-list-item">
        <view class="label">工单标题:</view>
        <view class="content">{{product.title}}</view>
    </view>
    <view class="detail-list-item">
        <view class="label">工单描述:</view>
        <view class="content">{{product.description}}</view>
    </view>

    <view class="detail-list-item">
        <view class="label">凭证照片:</view>
    </view>

    <view class="evidences">
        <image mode="widthFix"
               bindtap='showCurrentPic'
               data-index="{{index}}"
               wx:for="{{product.evidences}}"
               wx:key="{{index}}"
               src="{{item}}"></image>
    </view>
</view>