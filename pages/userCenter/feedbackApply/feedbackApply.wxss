page {
  background-color: #F6F6F6; }

.feedback-apply {
  margin: 15px 15px 80px 15px;
  padding: 15px;
  background-color: white;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px; }

.product-info {
  margin-bottom: 20px;
  display: flex; }
  .product-info .product-pic {
    flex-shrink: 0;
    margin-right: 10px; }
    .product-info .product-pic image {
      border: 1px solid #F0F0EC;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      border-radius: 5px;
      overflow: hidden;
      height: 80px;
      width: 80px;
      display: block; }
  .product-info .product-meta {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    flex-grow: 1; }
    .product-info .product-meta .name {
      font-size: 12.8px;
      font-weight: bold;
      color: #333333; }
    .product-info .product-meta .meta {
      font-size: 12.8px;
      color: #666666; }
  .product-info .product-price {
    color: #FF3948;
    display: flex;
    align-items: center;
    text-align: center; }

.form .input-group {
  margin-bottom: 5px;
  padding: 5px 0;
  display: flex;
  justify-content: space-between;
  font-size: 12.8px; }
  .form .input-group .label {
    margin-right: 10px;
    color: #666666;
    flex-shrink: 0; }
  .form .input-group .input {
    flex-grow: 1;
    display: flex;
    padding: 0 10px; }
    .form .input-group .input radio-group {
      width: 100%;
      justify-content: space-between; }
      .form .input-group .input radio-group radio {
        width: 45%; }
  .form .input-group textarea {
    padding: 5px !important;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    border: 1px solid #F0F0EC; }

.count-changer {
  width: 120px;
  display: flex; }
  .count-changer .decrease, .count-changer .increase {
    flex-shrink: 0;
    width: 36px;
    height: 30px;
    position: relative;
    border: 1rpx solid #999999; }
    .count-changer .decrease:active, .count-changer .increase:active {
      background-color: #F6F6F6; }
    .count-changer .decrease:after, .count-changer .increase:after {
      content: '';
      background-color: #999999;
      position: absolute;
      height: 2px;
      width: 10px;
      top: 50%;
      margin-top: -1px;
      left: 50%;
      margin-left: -5px; }
    .count-changer .decrease:before, .count-changer .increase:before {
      content: '';
      background-color: #999999;
      position: absolute;
      height: 10px;
      width: 2px;
      top: 50%;
      margin-top: -5px;
      left: 50%;
      margin-left: -1px; }
  .count-changer .decrease {
    border-right: none;
    -webkit-border-radius: 5px 0 0 5px;
    -moz-border-radius: 5px 0 0 5px;
    border-radius: 5px 0 0 5px; }
    .count-changer .decrease:before {
      content: none; }
  .count-changer .increase {
    border-left: none;
    -webkit-border-radius: 0 5px 5px 0;
    -moz-border-radius: 0 5px 5px 0;
    border-radius: 0 5px 5px 0; }
  .count-changer .counter {
    font-size: 16px;
    line-height: 28px;
    text-align: center;
    flex-grow: 1;
    border: 1rpx solid #999999;
    margin-left: -1px; }

.uploader {
  padding: 10px 0; }
  .uploader-title {
    font-size: 12.8px;
    color: #666666; }
  .uploader-content {
    display: flex;
    flex-flow: row wrap;
    padding: 10px 0; }
    .uploader-content-item {
      position: relative;
      margin-right: 15px;
      margin-bottom: 15px;
      display: block; }
      .uploader-content-item image {
        border: 1rpx solid #F0F0EC;
        height: 80px;
        width: 80px;
        display: block; }
      .uploader-content-item .close {
        line-height: 1;
        text-align: center;
        position: absolute;
        padding: 3px;
        top: -12px;
        right: -12px;
        height: 20px;
        width: 20px;
        -webkit-border-radius: 15px;
        -moz-border-radius: 15px;
        border-radius: 15px;
        background-color: rgba(0, 0, 0, 0.2); }

.img-picker {
  position: relative;
  background-color: #F6F6F6;
  display: block;
  height: 80px;
  width: 80px;
  border: 1rpx solid #F0F0EC;
  font-size: 40px;
  padding: 20px;
  line-height: 1;
  text-align: center; }
  .img-picker:before, .img-picker:after {
    content: " ";
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #A3A3A3; }
  .img-picker:before {
    width: 2px;
    height: 32px; }
  .img-picker:after {
    width: 32px;
    height: 2px; }

.btn-feedback {
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
  margin-bottom: 20px;
  width: 90%;
  bottom: 0;
  left: 5%;
  display: block;
  position: fixed;
  font-size: 16px;
  color: white;
  font-weight: bold;
  text-align: center;
  padding: 10px;
  line-height: 30px;
  background-color: #0BE7C5; }
