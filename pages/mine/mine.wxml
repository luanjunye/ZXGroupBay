        </view>
        <view class="operate-body">
            <view wx:for="{{menuListNormal}}"
                  wx:key="{{item.id}}"
                  data-index="{{item.id}}"
                  data-url="{{item.url}}"
                  class="operate-body-item"
                  bindtap="switchMenu" >
                    <view class="icon">
                        <image src="{{item.iconUrl}}" mode="aspectFit"></image>
                    </view>
                    <text>{{item.title}}</text>
                    <view wx:if="{{item.badge > 0}}" class="badge">{{item.badge}}</view>
            </view>
        </view>
    </view>

