<view class="navbar">
    <view
            wx:for="{{orderStates}}"
            wx:key="{{item.id}}"
            data-index="{{item.id}}"
            bindtap="navbarTaped"
            class="navbar-item {{item.active? 'active': ''}}">
        {{item.title}}
    </view>
</view>

<view class="order-list">
    <view class="order-list-item light-shadow" wx:for="{{10}}" wx:key="{{index}}">
<!--        head-->
        <view class="head">
            <view class="user-info">
                <view class="user-head">
                    <image src="/assets/avater.png" mode="widthFix"></image>
                </view>
                <view class="user-detail">
                    <view class="name">{{order.name}}</view>
                    <view class="date">{{order.date}}</view>
                </view>
            </view>
            <view class="state-wrapper">
                <view class="state">{{order.state}}</view>
                <view class="time-left"><text>{{countdown}}</text></view>
            </view>
        </view>

<!--        body-->
        <view class="body">
            <view class="goods-list">
                <image src="{{imgUrl}}"
                       wx:for="{{order.imgs}}"
                       wx:for-item="imgUrl"
                       mode="aspectFit">
                </image>
            </view>
            <view class="amount">共{{order.count}}件商品 总价: ￥{{order.amount}}</view>
        </view>

<!--        footer-->
        <view class="footer">
            <view class="btn-outline">自提</view>
            <view class="btn btn-fill">去付款</view>
        </view>
    </view>
</view>