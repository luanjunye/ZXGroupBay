.ucenter {
  background: #F6F6F6;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
  z-index: -2;
}

.prompt {
  margin: 10px auto;
  font-size: 14px;
}

.top {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.top .img {
  width: 36px;
  height: 36px;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  border: 1 rpx solid #F0F0EC;
}
.top .name {
  font-size: 16px;
  margin-left: 10px;
}

.orderStatus {
  margin: 0px 10px 5px 10px;
  background: #FFF;
  padding: 20px;
}
.orderStatus .status {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 16px;
}
.orderStatus .status .img {
  width: 24px;
  height: 24px;
  margin-right: 10px;
}
.orderStatus .count {
  margin-top: 10px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.commanderInfo {
  margin: 0 10px;
  background: #FFF;
  padding: 20px;
}
.commanderInfo .body {
  margin-top: 10px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 14px;
}
.commanderInfo .body .delivery {
  width: 80px;
}
.commanderInfo .body .address {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order {
  margin: 5px 10px;
  padding: 20px;
  background: #FFF;
}
.order .orderInfo {
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order .orderInfo .img {
  width: 120px;
  height: 120px;
  flex-shrink: 0;
}
.order .orderInfo .info {
  width: 200px;
  height: 120px;
  padding-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 14px;
  flex-grow: 1;
}
.order .orderInfo .info .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.order .orderInfo .info .second {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order .orderInfo .info .second .description {
  font-size: 12px;
  color: #999999;
}
.order .orderInfo .info .top_down {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.order .orderInfo .info .top_down .money {
  font-size: 10px;
  color: #DD3C4A;
  display: flex;
  align-items: center;
}
.order .orderInfo .info .top_down .money .number {
  font-size: 14px;
}
.order .orderInfo .info .top_down .refund {
  font-size: 14px;
  color: #FFF;
  background: #BEBEBE;
  padding: 3px 7px;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}

.down {
  margin: 0 10px;
  background: #FFF;
  padding: 20px;
}
.down .down_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px 0;
}
.down .down_info .text_a {
  color: #FF3948;
}

.orderRemark {
  margin: 5px 10px;
  background: #FFF;
  padding: 20px 20px 60px 20px;
  font-size: 16px;
}
.orderRemark .top {
  display: flex;
  justify-content: space-between;
}
.orderRemark .time {
  margin-top: 10px;
}

.cart-bottom {
  z-index: 100;
  position: fixed;
  bottom: 0;
  background: #0BE7C5;
  display: flex;
  margin-bottom: 20px;
  align-items: center;
  padding: 20rpx 0rpx;
  justify-content: space-around;
  width: 750rpx;
  border-top: 2 rpx solid #f0f0f0;
  color: #FFF;
}
